<h1>Books</h1>

<table>
<thead>
<tr>
<th>title</th>
<th>body</th>
<th></th>
</tr>
</thead>

<tbody>
<% @blogs.each do |blog| %>
<tr> 
<td>
<%= blog.title %>
</td>
<td>
<%= blog.body %>
</td>
<td>
  <%= link_to "Show", blog_path(blog.id) %>
  <%= link_to "Edit", edit_blog_path(blog.id) %>
  <%= link_to "Destroy", blog_path(blog.id), method: :delete, "data-confirm" => "Are you sure?" %> 
</td>
</tr>  
<% end %>
</tbody>   
</table>


<h1>New Book</h1>
<%= form_for(@blog) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>